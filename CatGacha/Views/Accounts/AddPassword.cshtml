@model CatGacha.Models.Accounts.AddPasswordViewModel

<h2>Lisa Salasõna</h2>
<hr/>
<p class="text-info">
    Oled kasutanud sisselogimiseks välist kasutajat, ning sul ei ole
    kohalikku kasutajanime ja salasõna. Sea omale uus parool siinsamas.
    Kasutajanimena saad kasutada oma emailiaadressi.
</p>
<div class="row">
    <div class="col-md-11">
        <form method="post">
            <div asp-validation-summary="All" class="form-control"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control"></input>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control"></input>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button 
                type="submit" 
                class="btn btn-primary" 
                style="width:auto">
                Sea uus salasõna
            </button>
        </form>
    </div>
</div>